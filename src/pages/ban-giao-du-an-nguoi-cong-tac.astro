---
import DefaultLayout from "@/layouts/DefaultLayout.astro";
import '@/assets/css/ban-giao-du-an-nguoi-cong-tac.css'
import Header from '@/components/Header.astro';
---

<DefaultLayout>
    <Header/>
    <main>
        <div class="project-handover">
            <div class="inner-project-handover container">
                <div class="project-handover-title">Bàn giao dự án</div>
                <div class="project-handover-body">
                    <div class="project-handover-section">
                        <label class="project-handover-label">Mô tả</label>
                        <textarea class="project-handover-textarea"></textarea>
                    </div>
                    <div class="project-handover-section">
                        <label class="project-handover-label">Lưu ý</label>
                        <div class="project-handover-note">
                            Dự án 1 cần sửa một số điểm như padding, margin. <br/>
                            Dự án 2 cần thay đổi font chữ.
                        </div>
                    </div>
                    <div class="project-handover-upload">
                        <label class="project-handover-label">Đăng tải file/ link dự án:</label>
                        <div class="project-handover-upload-box">
                            <button class="upload-box-button">
                                <img src="./assets/images/solar_upload-square-outline.svg" alt="icon"> Đăng tải ở đây
                            </button>
                            <div class="upload-box-list">
                                <div class="upload-item">
                                    <div class="upload-item-info">
                                        <img src="./assets/images/solar_file-outline.svg" alt="icon">
                                        <span class="upload-item-name">Tên file</span>
                                    </div>
                                    <span class="upload-item-success"></span>
                                </div>
                                <div class="upload-item">
                                    <div class="upload-item-info">
                                        <img src="./assets/images/solar_file-outline.svg" alt="icon">
                                        <span class="upload-item-name">Tên file</span>
                                    </div>
                                    <span class="upload-item-success"></span>
                                </div>
                                <div class="upload-item">
                                    <div class="upload-item-info">
                                        <img src="./assets/images/solar_file-outline.svg" alt="icon">
                                        <span class="upload-item-name">Tên file</span>
                                    </div>
                                    <span class="upload-item-error"></span>
                                </div>
                                <div class="upload-item">
                                    <div class="upload-item-info">
                                        <img src="./assets/images/solar_file-outline.svg" alt="icon">
                                        <span class="upload-item-name">Tên file</span>
                                    </div>
                                    <span class="upload-item-pending"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="project-handover-submit">Gửi</button>
            </div>
        </div>
    </main>
</DefaultLayout>