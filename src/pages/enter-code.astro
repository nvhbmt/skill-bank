---
import DefaultLayout from '@/layouts/DefaultLayout.astro';
import '@/assets/css/enter-code.css';
---

<DefaultLayout>
    <div class="container">
        <section class="enter-code-page">
            <div class="hero">
                <div class="hero-section">
                    <a href="#"
                        ><img src="/assets/images/logo.png" alt="logo" /></a
                    >

                    <h1>Enter your code</h1>

                    <form action="#" method="post">
                        <div class="input">
                            <input type="text" maxlength="1" />
                            <input type="text" maxlength="1" />
                            <input type="text" maxlength="1" />
                            <input type="text" maxlength="1" />
                        </div>

                        <div class="no-mail">
                            <span>Don't receive the email?</span>
                            <a href="#">Click to resent</a>
                        </div>

                        <button class="continue">Continue</button>
                    </form>

                    <a href="#">
                        <i class="fa-solid fa-arrow-rotate-left"></i> Back to sign
                        in
                    </a>
                </div>
            </div>
        </section>
    </div>
</DefaultLayout>
