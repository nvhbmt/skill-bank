---
import DefaultLayout from '@/layouts/DefaultLayout.astro';
import '@/assets/css/enter-code.css';
---

<DefaultLayout>
    <!--
      ĐÃ XÓA <div class="container"> thừa,
      giống như trang forgot-password
    -->
    <section class="enter-code-page">
        <div class="hero">
            <div class="hero-section">
                <a href="#"><img src="/assets/image/logo.png" alt="logo" /></a>

                <h1>Enter your code</h1>

                <form action="#" method="post">
                    <div class="input">
                        <!--
                          Giữ nguyên 4 ô input
                          nhưng CSS của chúng sẽ được cập nhật
                        -->
                        <input class="otp-input" type="text" maxlength="1" />
                        <input class="otp-input" type="text" maxlength="1" />
                        <input class="otp-input" type="text" maxlength="1" />
                        <input class="otp-input" type="text" maxlength="1" />
                    </div>

                    <div class="no-mail">
                        <span>Don't receive the email?</span>
                        <a href="#">Click to resent</a>
                    </div>

                    <button class="continue">Continue</button>
                </form>

                <a href="/login">
                    <i class="fa-solid fa-arrow-rotate-left"></i> Back to sign in
                </a>
            </div>
        </div>
    </section>
    <script src="@/assets/script/enter-code.js"></script>
</DefaultLayout>
