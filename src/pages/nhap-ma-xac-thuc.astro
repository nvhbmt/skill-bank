<DefaultLayout>
    <div class="container">
        <section class="enter-code-page">
            <div class="hero">
                <div class="hero-section">
                    <a href="#"
                        ><img src="/assets/images/logo.png" alt="logo" /></a
                    >

                    <h1>Nhập mã xác thực</h1>

                    <form action="#" method="post">
                        <div class="input">
                            <input type="text" maxlength="1" />
                            <input type="text" maxlength="1" />
                            <input type="text" maxlength="1" />
                            <input type="text" maxlength="1" />
                        </div>

                        <div class="no-mail">
                            <span>Không nhận được email?</span>
                            <a href="#">Gửi lại</a>
                        </div>

                        <button class="continue">Tiếp tục</button>
                    </form>

                    <a href="#">
                        <i class="fa-solid fa-arrow-rotate-left"></i> Quay lại đăng
                        nhập
                    </a>
                </div>
            </div>
