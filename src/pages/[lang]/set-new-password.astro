---
import DefaultLayout from '@/layouts/DefaultLayout.astro';
import '@/assets/css/set-new-password.css';
import { getStaticPaths, useTranslate } from '@/i18n';
export { getStaticPaths };

const { lang, t, l } = useTranslate(Astro);
---

<DefaultLayout>
    <section class="set-new-password-page">
        <div class="grid-overlay"></div>
        <div class="hero">
            <div class="hero-section">
                <a href={l('/')}
                    ><img src="/assets/images/logo.png" alt="logo" /></a
                >

                <h1>{t('set-new-password.title')}</h1>

                <form action="#" method="post">
                    <div class="password-wrapper">
                        <input
                            type="password"
                            id="password"
                            name="password"
                            placeholder={t('set-new-password.password')}
                        />
                        <div class="toggle-password">
                            <!-- Icon mắt mở (ban đầu ẩn) -->
                            <svg
                                class="icon-eye"
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke-width="1.5"
                                stroke="currentColor"
                                style="display: none;"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 10.224 7.69 6 12 6c4.31 0 8.577 4.224 9.964 5.683.12.18.12.459 0 .639C20.577 13.776 16.31 18 12 18c-4.31 0-8.577-4.224-9.964-5.683Z"
                                ></path>
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"
                                ></path>
                            </svg>
                            <!-- Icon mắt chéo (ban đầu hiện) -->
                            <svg
                                class="icon-eye-slash"
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke-width="1.5"
                                stroke="currentColor"
                                style="display: block;"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M3.98 8.223A10.477 10.477 0 0 0 1.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.451 10.451 0 0 1 12 4.5c4.756 0 8.773 3.162 10.065 7.498a10.522 10.522 0 0 1-4.293 5.774M6.228 6.228 3 3m3.228 3.228 3.65 3.65m7.894 7.894L21 21m-3.228-3.228-3.65-3.65m0 0a3 3 0 1 0-4.243-4.243m4.242 4.242L9.88 9.88"
                                ></path>
                            </svg>
                        </div>
                    </div>

                    <!-- BỌC LẠI INPUT BẰNG WRAPPER -->
                    <div class="password-wrapper">
                        <input
                            type="password"
                            id="confirm-password"
                            name="confirm-password"
                            placeholder={t('set-new-password.confirmPass')}
                        />
                        <!-- THÊM ICON TOGGLE -->
                        <div class="toggle-password">
                            <!-- Icon mắt mở (ban đầu ẩn) -->
                            <svg
                                class="icon-eye"
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke-width="1.5"
                                stroke="currentColor"
                                style="display: none;"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 10.224 7.69 6 12 6c4.31 0 8.577 4.224 9.964 5.683.12.18.12.459 0 .639C20.577 13.776 16.31 18 12 18c-4.31 0-8.577-4.224-9.964-5.683Z"
                                ></path>
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"
                                ></path>
                            </svg>
                            <!-- Icon mắt chéo (ban đầu hiện) -->
                            <svg
                                class="icon-eye-slash"
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke-width="1.5"
                                stroke="currentColor"
                                style="display: block;"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M3.98 8.223A10.477 10.477 0 0 0 1.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.451 10.451 0 0 1 12 4.5c4.756 0 8.773 3.162 10.065 7.498a10.522 10.522 0 0 1-4.293 5.774M6.228 6.228 3 3m3.228 3.228 3.65 3.65m7.894 7.894L21 21m-3.228-3.228-3.65-3.65m0 0a3 3 0 1 0-4.243-4.243m4.242 4.242L9.88 9.88"
                                ></path>
                            </svg>
                        </div>
                    </div>

                    <button type="submit" class="reset"
                        >{t('set-new-password.setNewPass')}</button
                    >
                </form>

                <a href={l('/sign-in')}>
                    <i class="fa-solid fa-arrow-rotate-left"></i>{
                        t('set-new-password.backToSignIn')
                    }
                </a>
            </div>
        </div>
    </section>

    <!-- Success Dialog -->
    <div id="success-dialog" class="success-dialog">
        <div class="success-dialog-content">
            <div class="success-dialog-icon">✓</div>
            <h2 class="success-dialog-title">
                {t('set-new-password.successTitle') || 'Đặt mật khẩu thành công!'}
            </h2>
            <p class="success-dialog-message">
                {t('set-new-password.successMessage') ||
                    'Mật khẩu của bạn đã được cập nhật thành công. Bạn có thể đăng nhập với mật khẩu mới.'}
            </p>
            <button
                class="success-dialog-button"
                onclick="closeSuccessDialog()"
            >
                {t('set-new-password.backToHome') || 'Trở về trang chủ'}
            </button>
        </div>
    </div>

    <style>
        .success-dialog {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7);
            backdrop-filter: blur(4px);
            -webkit-backdrop-filter: blur(4px);
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 100000;
            padding: 2rem;
        }

        .success-dialog.active {
            display: flex;
        }

        .success-dialog-content {
            background: rgba(30, 30, 35, 0.98);
            border: 1px solid rgba(255, 255, 255, 0.15);
            border-radius: 20px;
            padding: 3rem;
            max-width: 500px;
            width: 100%;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.8);
            text-align: center;
        }

        .success-dialog-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(135deg, #7c3aed 0%, #8b5cf6 100%);
            color: white;
            font-size: 4rem;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 2rem;
            box-shadow: 0 0 30px rgba(124, 58, 237, 0.5);
        }

        .success-dialog-title {
            font-size: 2.4rem;
            font-weight: 700;
            color: #ffffff;
            margin: 0 0 1rem 0;
        }

        .success-dialog-message {
            font-size: 1.6rem;
            color: #d1d5db;
            line-height: 1.6;
            margin: 0 0 2.4rem 0;
        }

        .success-dialog-button {
            width: 100%;
            padding: 1.2rem 2.4rem;
            border-radius: 12px;
            font-size: 1.6rem;
            font-weight: 600;
            background: linear-gradient(135deg, #7c3aed 0%, #8b5cf6 100%);
            color: #ffffff;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 0 20px rgba(124, 58, 237, 0.5);
        }

        .success-dialog-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 0 30px rgba(124, 58, 237, 0.7);
        }

        .success-dialog-button:active {
            transform: translateY(0);
        }
    </style>

    <script src="@/assets/script/set-new-password.js"></script>
</DefaultLayout>
