---
import DefaultLayout from '@/layouts/DefaultLayout.astro';
import '@/assets/css/dang-ky.css';
import { getStaticPaths, useTranslate } from '@/i18n';
export { getStaticPaths };

const { lang, t, l } = useTranslate(Astro);
---

<DefaultLayout>
    <div class="container">
        <div class="login-page">
            <div class="login-page-left">
                <img src="/assets/images/logo.svg" alt="logo" class="logo" />
            </div>
            <div class="login-page-right">
                <div class="inner-login-page-right">
                    <div class="login-content">
                        <div class="login-form">
                            <h1>{t('sign-up.title')}</h1>
                            <div>
                                {t('sign-up.haveAccount')} <a
                                    href="/dang-nhap"
                                    class="login-link">{t('sign-up.signIn')}</a
                                >
                            </div>
                        </div>
                        <div class="login-form-body">
                            <div class="login-form-group">
                                <img
                                    src="/assets/images/solar_pen-outline.svg"
                                    alt="icon"
                                />
                                <input
                                    type="text"
                                    placeholder={t('sign-up.fullName')}
                                    class="login-form-group-text"
                                />
                            </div>
                            <div class="login-form-group">
                                <img
                                    src="/assets/images/solar_user-outline.svg"
                                    alt="icon"
                                />
                                <input
                                    type="text"
                                    placeholder={t('sign-up.username')}
                                    class="login-form-group-text"
                                />
                            </div>
                            <div class="login-form-group">
                                <img
                                    src="/assets/images/mdi-light_email.svg"
                                    alt="icon"
                                />
                                <input
                                    type="text"
                                    placeholder={t('sign-up.email')}
                                    class="login-form-group-text"
                                />
                            </div>
                            <div class="login-form-group">
                                <img
                                    src="/assets/images/material-symbols-light_lock-outline.svg"
                                    alt="icon"
                                />
                                <input
                                    type="password"
                                    placeholder={t('sign-up.password')}
                                    class="login-form-group-text"
                                />
                            </div>
                            <div class="login-form-action">
                                <label
                                    ><input type="checkbox" /> &nbsp; {t('sign-up.agree')}
                                </label>&nbsp;
                                <a
                                    href="/dieu-khoan-va-dieu-kien"
                                    class="login-link">{t('sign-up.TermsAndConditions')}</a
                                >
                            </div>
                        </div>
                        <button class="login-form-btn">{t('sign-up.title')}</button>
                    </div>
                    <div class="login-form-divider">
                        <div class="login-form-divider-line"></div>
                        <div class="login-form-divider-text">{t('sign-up.or')}</div>
                        <div class="login-form-divider-line"></div>
                    </div>
                    <div class="login-btn-box">
                        <button class="login-btn">
                            <img
                                src="/assets/images/flat-color-icons_google.png"
                                alt="icon"
                            />
                            <div class="login-btn-text">{t('sign-up.gmail')}</div>
                        </button>
                        <button class="login-btn">
                            <img
                                src="/assets/images/logos_facebook.png"
                                alt="icon"
                            />
                            <div class="login-btn-text">{t('sign-up.facebook')}</div>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</DefaultLayout>
