---
import DefaultLayout from '@/layouts/DefaultLayout.astro';
import '@/assets/css/dang-tai-du-an.css';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
---

<DefaultLayout>
    <div class="wrapper">
        <Header />

        <main>
            <!-- Đây là cái "frame" chính, bo góc, màu đen mờ -->
            <div class="hero-section">
                <h1>ĐĂNG TẢI DỰ ÁN MỚI</h1>

                <form class="project-form">
                    <div class="form-body">
                        <!-- CỘT BÊN TRÁI -->
                        <div class="column-left">
                            <section class="form-section" id="thong-tin-chung">
                                <h3>Thông tin chung</h3>
                                <div class="form-group-wrapper-1 group-left">
                                    <div class="sub-grid-1">
                                        <div class="form-group">
                                            <label for="project-name"
                                                >Tên dự án:</label
                                            >
                                            <input
                                                type="text"
                                                id="project-name"
                                                name="project_name"
                                                class="form-input"
                                            />
                                        </div>
                                        <div class="form-group">
                                            <label for="location"
                                                >Địa điểm làm việc:</label
                                            >
                                            <input
                                                type="text"
                                                id="location"
                                                name="location"
                                                class="form-input"
                                            />
                                        </div>
                                    </div>

                                    <div class="sub-grid-2">
                                        <div class="form-group">
                                            <label for="category"
                                                >Phân loại:</label
                                            >
                                            <select
                                                id="category"
                                                name="category"
                                                class="form-input"
                                                required
                                            >
                                                <option
                                                    value=""
                                                    disabled
                                                    selected
                                                    hidden
                                                    >Chọn phân loại</option
                                                >
                                                <option value="website"
                                                    >Website</option
                                                >
                                                <option value="mobile-app"
                                                    >Mobile App</option
                                                >
                                                <option value="desktop-app"
                                                    >Desktop App</option
                                                >
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="start-date"
                                                >Thời gian bắt đầu:</label
                                            >
                                            <input
                                                type="date"
                                                id="start-date"
                                                name="start_date"
                                                class="form-input"
                                                required
                                            />
                                        </div>
                                    </div>
                                </div>
                            </section>

                            <!-- === CẬP NHẬT 1: MÔ TẢ DỰ ÁN === -->
                            <section class="form-section" id="mo-ta-du-an">
                                <h3>Mô tả dự án</h3>
                                <div class="form-group group-left">
                                    <textarea
                                        id="description"
                                        name="description"
                                        class="form-input auto-resize-textarea"
                                        rows="4"
                                        placeholder="Mô tả chi tiết dự án của bạn..."
                                    ></textarea>
                                </div>
                            </section>

                            <!-- === CẬP NHẬT 2: DANH MỤC KỸ NĂNG === -->
                            <section class="form-section" id="ky-nang">
                                <h3 class="section-title-with-button">
                                    <span>Danh mục kỹ năng</span>
                                    <!-- Thêm ID cho nút + -->
                                    <button
                                        type="button"
                                        class="btn-add"
                                        id="add-skill-btn">+</button
                                    >
                                </h3>
                                <!-- Thêm ID cho container list -->
                                <div
                                    class="form-group-wrapper-2 group-left"
                                    id="skill-list-container"
                                >
                                    <!-- Chỉ giữ lại 1 skill mẫu -->
                                    <div class="form-group">
                                        <label for="skill-1">Kỹ năng 1</label>
                                        <select
                                            id="skill-1"
                                            name="skill-1"
                                            class="form-input"
                                            required
                                        >
                                            <option
                                                value=""
                                                disabled
                                                hidden
                                                selected>Chọn kỹ năng</option
                                            >
                                            <option value="react">React</option>
                                            <option value="vue">Vue</option>
                                            <option value="css">CSS</option>
                                            <option value="tailwind"
                                                >Tailwind</option
                                            >
                                        </select>
                                    </div>
                                </div>
                            </section>

                            <!-- === CẬP NHẬT 3: TẢI ẢNH BÌA === -->
                            <section class="form-section">
                                <h3>Tải lên ảnh bìa</h3>
                                <!-- Thêm div container -->
                                <div
                                    class="form-group group-left upload-container"
                                >
                                    <label class="upload-box" for="coverUpload">
                                        <i
                                            class="fa-solid fa-arrow-up-from-bracket"
                                        ></i>
                                        <p>Đăng tải ở đây</p>
                                    </label>

                                    <input
                                        type="file"
                                        id="coverUpload"
                                        accept="image/*"
                                        hidden
                                    />

                                    <!-- Tên file -->
                                    <a
                                        id="cover-file-name"
                                        class="file-name-display"
                                        href="#"
                                        target="_blank"
                                        download
                                        hidden></a>
                                </div>
                            </section>
                        </div>

                        <!-- CỘT BÊN PHẢI -->
                        <div class="column-right">
                            <!-- === CẬP NHẬT 4: THỜI GIAN HOẠT ĐỘNG === -->
                            <section class="form-section" id="thoi-gian">
                                <h3 class="section-title-with-button">
                                    <span>Thời gian hoạt động</span>
                                    <button
                                        type="button"
                                        class="btn-add"
                                        id="add-milestone-btn">+</button
                                    >
                                </h3>

                                <div
                                    class="timeline-container"
                                    id="milestone-list"
                                >
                                    <div class="milestone-item">
                                        <textarea
                                            name="milestone-1"
                                            class="milestone-input auto-resize-textarea"
                                            placeholder="Mốc 1: Bắt đầu dự án"
                                            rows="1"></textarea>
                                    </div>
                                </div>
                            </section>

                            <section class="form-section" id="thanh-vien">
                                <h3>Thành viên</h3>
                                <div class="list-wrapper">
                                    <div class="member-item">
                                        <img
                                            src="/assets/image/vy1.png"
                                            alt="avatar"
                                            class="member-avatar"
                                        />
                                        <div class="member-info">
                                            <span class="member-name"
                                                >Bùi Thái Vy</span
                                            >
                                            <span class="member-username"
                                                >@vyxam</span
                                            >
                                        </div>
                                    </div>
                                    <div class="member-item">
                                        <img
                                            src="/assets/image/va2.png"
                                            alt="avatar"
                                            class="member-avatar"
                                        />
                                        <div class="member-info">
                                            <span class="member-name"
                                                >Nguyễn Xuân Việt Anh</span
                                            >
                                            <span class="member-username"
                                                >@tredeadline</span
                                            >
                                        </div>
                                    </div>
                                    <div class="member-item">
                                        <img
                                            src="/assets/image/me2.png"
                                            alt="avatar"
                                            class="member-avatar"
                                        />
                                        <div class="member-info">
                                            <span class="member-name"
                                                >Trần Tường Vân</span
                                            >
                                            <span class="member-username"
                                                >@deptrais1tgioi</span
                                            >
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </div>

                    <div class="form-footer">
                        <div class="checkbox-area">
                            <input
                                type="checkbox"
                                id="terms"
                                name="terms"
                                class="form-checkbox"
                            />
                            <label for="terms"
                                >Tôi đã đồng ý với <a href="#"
                                    >Chính sách và Điều khoản sử dụng</a
                                ></label
                            >
                        </div>
                        <div class="buttons-area">
                            <button type="button" class="btn btn-secondary"
                                >Quay lại</button
                            >
                            <button type="submit" class="btn btn-primary"
                                >Đăng</button
                            >
                        </div>
                    </div>
                </form>
            </div>
        </main>
    </div>

    <!-- 2. SỬ DỤNG BIẾN IMPORT ĐÃ KHAI BÁO Ở TRÊN (CUỐI FILE) -->

    <script src="@/assets/script/dang-tai-du-an.js"></script>
</DefaultLayout>
