---
interface Props {
    size?: 'small' | 'medium' | 'large';
    variant?: 'plain' | 'solid' | 'link';
    color?: 'light' | 'medium' | 'dark';
    href?: string;
    type?: 'button' | 'submit' | 'reset';
    class?: string;
}

const {
    size = 'medium',
    variant = 'solid',
    color = 'medium',
    href,
    type = 'button',
    class: className = '',
} = Astro.props;

const baseClass = 'btn';
const sizeClass = `btn--${size}`;
const variantClass = `btn--${variant}`;
const colorClass = variant !== 'plain' ? `btn--${variant}-${color}` : '';
const classes = [baseClass, sizeClass, variantClass, colorClass, className]
    .filter(Boolean)
    .join(' ');

const Tag = href || variant === 'link' ? 'a' : 'button';
const attrs =
    href || variant === 'link'
        ? { href: href || '#', class: classes }
        : { type, class: classes };
---

<Tag {...attrs}>
    <slot />
</Tag>

<style>
    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.3s ease;
        cursor: pointer;
        border: none;
        outline: none;
        font-family: inherit;
        white-space: nowrap;
    }

    /* Sizes */
    .btn--small {
        padding: 8px 16px;
        font-size: 1.4rem;
        min-height: 32px;
    }

    .btn--medium {
        padding: 12px 24px;
        font-size: 1.6rem;
        min-height: 40px;
    }

    .btn--large {
        padding: 16px 32px;
        font-size: 1.8rem;
        min-height: 48px;
    }

    /* Plain Variant (Outline) */
    .btn--plain {
        background-color: transparent;
        border: 1px solid var(--color-surface);
        border-radius: 9999px;
        color: var(--color-text-muted);
    }

    .btn--plain:hover {
        background-color: var(--color-surface);
        color: var(--color-text);
        border-color: var(--color-primary-light);
    }

    .btn--plain:active {
        background-color: var(--color-primary-light);
        color: var(--color-text-invert);
        border-color: var(--color-primary);
        transform: scale(0.98);
    }

    /* Solid Variant */
    .btn--solid {
        border-radius: 9999px;
        color: var(--color-text-invert);
    }

    .btn--solid-light {
        background-color: var(--color-primary-light);
    }

    .btn--solid-light:hover {
        background-color: var(--color-primary);
    }

    .btn--solid-light:active {
        background-color: var(--color-primary-dark);
        transform: scale(0.98);
    }

    .btn--solid-medium {
        background-color: var(--color-primary);
    }

    .btn--solid-medium:hover {
        background-color: var(--color-primary-dark);
    }

    .btn--solid-medium:active {
        background-color: var(--color-text-muted);
        transform: scale(0.98);
    }

    .btn--solid-dark {
        background-color: var(--color-primary-dark);
    }

    .btn--solid-dark:hover {
        background-color: var(--color-text-muted);
    }

    .btn--solid-dark:active {
        background-color: var(--color-text);
        transform: scale(0.98);
    }

    /* Link Variant */
    .btn--link {
        background-color: transparent;
        border-radius: 0;
        padding-left: 0;
        padding-right: 0;
    }

    .btn--link-light {
        color: var(--color-primary-light);
        text-decoration: underline;
    }

    .btn--link-light:hover {
        color: var(--color-primary);
    }

    .btn--link-light:active {
        color: var(--color-primary-dark);
        transform: scale(0.98);
    }

    .btn--link-medium {
        color: var(--color-primary);
        text-decoration: underline;
    }

    .btn--link-medium:hover {
        color: var(--color-primary-dark);
    }

    .btn--link-medium:active {
        color: var(--color-text-muted);
        transform: scale(0.98);
    }

    .btn--link-dark {
        color: var(--color-text-muted);
        text-decoration: none;
    }

    .btn--link-dark:hover {
        color: var(--color-text);
        text-decoration: underline;
    }

    .btn--link-dark:active {
        color: var(--color-text);
        transform: scale(0.98);
    }
</style>
