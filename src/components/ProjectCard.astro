---
import { useTranslate } from '@/i18n';

interface Props {
    project: {
        image: string;
        title: string;
        tag: string;
        description: string;
        author: string;
        likes: number;
        projectId: number;
    };
}
const { project } = Astro.props;
const { t, l } = useTranslate(Astro);
---

<a href={l(`/project/${project.projectId}`)} class="project-card-new">
    <div class="project-thumb-wrapper">
        <img
            src={project.image}
            alt={project.title}
            class="project-thumb-new"
        />
    </div>
    <div class="project-info-new">
        <div class="project-header-row">
            <span class="project-title-new">
                {project.title}
            </span>
            <span class="project-tag-badge">
                {project.tag}
            </span>
        </div>
        <p class="project-desc">
            {project.description}
        </p>
        <div class="project-stats-row">
            <span class="author-info">
                by {project.author}
            </span>
            <div class="stats-icons">
                <div class="stat-icon">
                    <i class="fa-regular fa-thumbs-up"></i>{' '}
                    <span>{project.likes}</span>
                </div>
            </div>
        </div>
    </div>
</a>

<style scoped>
    .project-card-new {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 24px;
        overflow: hidden;
        transition: all 0.3s ease;
        text-decoration: none;
        display: flex;
        flex-direction: column;
        backdrop-filter: blur(10px);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
    }
    .project-card-new:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: var(--color-purple-button);
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(124, 58, 237, 0.3);
    }
    .project-thumb-wrapper {
        width: 100%;
        height: 200px;
        position: relative;
    }
    .project-thumb-new {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 20px 20px 0 0;
    }
    .project-info-new {
        padding: 1.5rem 2rem;
        background: transparent;
        color: var(--color-text-invert);
        border-radius: 0 0 20px 20px;
        display: flex;
        flex-direction: column;
        gap: 0.8rem;
    }
    .project-header-row {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }
    .project-title-new {
        font-size: var(--font-size-xl);
        font-weight: 800;
        line-height: 1.2;
        color: var(--color-text-invert);
    }
    .project-tag-badge {
        background-color: #8b5cf6;
        color: white;
        font-size: 1rem;
        font-weight: 700;
        padding: 0.4rem 1rem;
        border-radius: 15px;
        white-space: nowrap;
    }
    .project-desc {
        font-size: var(--font-size-sm);
        color: var(--color-text-gray);
        line-height: 1.5;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    .project-stats-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid rgba(0, 0, 0, 0.1);
    }
    .stats-icons {
        display: flex;
        gap: 1rem;
    }
    .author-info {
        color: var(--color-text-gray);
        font-size: var(--font-size-sm);
    }
    .stat-icon {
        display: flex;
        align-items: center;
        gap: 0.4rem;
        font-size: 1.4rem;
        color: var(--color-text-invert);
    }
</style>
