const {} = Astro.props;

import { getStaticPaths, useTranslate } from '@/i18n';
import { supabase } from '@/lib/supabase';
import Dialog from '@/components/Dialog.astro';
import { renderNotificationMessage, getNotificationTitle } from '@/utils/notification-renderer';
import viTranslations from '@/i18n/vi.json';
import enTranslations from '@/i18n/en.json';
export { getStaticPaths };

const { lang, t, l } = useTranslate(Astro);
const translations = lang === 'vi' ? viTranslations.notifications : enTranslations.notifications;

const session = Astro.locals.session;

const user = session?.user;
const userName = user?.user_metadata?.full_name;
const userUsername = user?.user_metadata?.username;
let avatarUrl = null;
let notifications: Array<{
    id: number;
    title: string | null;
    message: string | null;
    type: string | null;
    is_read: boolean | null;
    created_at: string | null;
}> = [];
let unreadCount = 0;

if (user) {
    const { data: userData, error: userError } = await supabase
        .from('user_info')
        .select('avatar_url')
        .eq('user_id', user.id)
        .is('deleted_at', null)
        .single();
    if (!userError && userData) {
        avatarUrl = userData.avatar_url ?? '/assets/images/avatar-default-icon.png';
    }

    // Fetch notifications
    const { data: notificationsData, error: notificationsError } = await supabase
        .from('notifications')
        .select('id, title, message, type, is_read, created_at')
        .eq('user_id', user.id)
        .order('created_at', { ascending: false })
        .limit(10);

    if (!notificationsError && notificationsData) {
        notifications = notificationsData;
        unreadCount = notifications.filter((n) => !n.is_read).length;
    }
}
